<software>
	<mysql>
		<install_type>replication</install_type>
		<deploy_server>db</deploy_server>
    <service_ip>server1</service_ip>
    <service_port>3306</service_port>
    <root>
			<pwd>petclinic</pwd>
		</root>
	</mysql>
  <nginx>
      <deploy_server>web</deploy_server>
      <vhosts>
				<vhost>
					<name>www.petclinic.kr</name>
					<ports>80</ports>
				  <server_admin>webmaster</server_admin>
					<doc_root>/www/petc/htdocs</doc_root>
					<log_root>/www/petc/logs/web</log_root>
					<use_modproxy>true</use_modproxy>
          <proxy_patterns>
            <proxy_pattern>
              <name>/petclinic</name>
              <pattern>http://localhost:8080</pattern>
            </proxy_pattern>
					</proxy_patterns>
					<enable>false</enable>
			</vhost>
		</vhosts>
  </nginx>
	<tomcat>
		<deploy_server>was</deploy_server>
    <jdk>openjdk</jdk>
    <install>
			<insthome>/www/petclinic</insthome>
			<home>/www/petclinic/apache-tomcat-7.0.77</home>
			<java_opts>-server -Xms512m -Xmx512m -XX:PermSize=128m -XX:MaxPermSize=128m -XX:+DisableExplicitGC</java_opts>
		</install>
		<server>
			<http_port>8080</http_port>
			<ajp_port>8009</ajp_port>
			<app_base>webapps</app_base>
			<name>petclinic</name>
			<contexts>
				<context>
					<name>/</name>
					<doc_base>petclinic</doc_base>
				</context>
				<context>
					<name>test</name>
					<doc_base>test</doc_base>
				</context>
		  </contexts>
		</server>
	</tomcat>
</software>
