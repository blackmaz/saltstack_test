        </servers>
        <vip>47.52.55.60</vip>
    </logical_server>
    <logical_server>
        <name>was</name>
        <servers>
            <server>server1</server>
            <server>server2</server>
        </servers>
    </logical_server>
    <logical_server>
        <name>db</name>
        <servers>
            <server>server3</server>
            <server>server4</server>
        </servers>
